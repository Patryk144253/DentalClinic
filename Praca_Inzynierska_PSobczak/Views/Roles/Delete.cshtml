@model Praca_Inzynierska_PSobczak.Models.Role

<h1>Delete</h1>

<div class="row">
    <div class="col-9">
        <h1 style="color: #dbc16c;">Role title: @Model.Name</h1>
    </div>

</div>

<div class="row mt-3">
    <div class="col-12">
        <p class="text-center">Do you want to delete the role?</p>
    </div>
</div>
<div class="row">
    <div class="col-6">
        <a class="btn btn-info float-right" asp-controller="Roles" asp-action="Index">No</a>
    </div>
    <div class="col-6">
        <a class="btn btn-danger float-left" asp-controller="Roles" asp-action="DeleteConfirmed" asp-route-id="@Model.Id">Yes</a>
    </div>
</div>
